{
  "name": "utxo-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for UTXO prototype",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=integration",
    "test:flow": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=flows",
    "test:edge": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=edge-cases",
    "test:lattice": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=lattice --runInBand",
    "test:lattice:chain": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=lattice/chain --runInBand",
    "test:lattice:diamond": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=lattice/diamond --runInBand",
    "test:lattice:fanout": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=lattice/fan-out --runInBand",
    "test:lattice:fanin": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=lattice/fan-in --runInBand",
    "test:lattice:stress": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=lattice/stress --runInBand",
    "test:all": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand"
  },
  "dependencies": {
    "viem": "^2.0.0",
    "@noble/secp256k1": "^2.0.0",
    "@noble/hashes": "^1.3.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  }
}
